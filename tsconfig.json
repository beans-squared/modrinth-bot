{
  "display": "Node 16",

  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "Node16",
    "moduleResolution": "node16",
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true
  }
}
